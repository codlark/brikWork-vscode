{
    "layout": {
        "scope": "brikwork",
        "prefix": "layout",
        "description": "insert a layout section with all the properties set to defaults",
        "body": [
            "layout {",
            "\twidth: ${1:1in}",
            "\theight: ${2:1in}",
            "\tname: ${3:${TM_FILENAME_BASE:asset}[assetIndex]}.png",
            "\toutput: ${4:output}",
            "\t${5:data: ${6:${TM_FILENAME_BASE:data}}.csv}",
            "\t${7:template: ${8:template}.bwl}",
            "\tdpi: ${9:300}",
            "}${0}"
        ]
    },
    "pdf": {
        "spope": "brikwork",
        "prefix": "pdf",
        "description": "insert a pdf section with all the properties set to defaults",
        "body": [
            "pdf {",
            "\tname: ${1:${TM_FILENAME_BASE:assets}}.pdf",
            "\txMargin: ${2:.25in}",
            "\tyMargin: ${3:.25in}",
            "\tborder: ${4:.01in}",
            "\tpageSize: ${5:letter}",
            "\torientation: ${6:portrait}",
            "\trender: ${7:true}",
            "}${0}"
        ]
    }
}